  <wxc-tab
    wx:if="{{tabs.length}}"
    bind:tabchange="onClick"
    default-index="{{0}}"
    component-id="c2"
    animate="{{true}}"
    class="tab"
    active-text-color="#38ADFF"
    active-line-color="#38ADFF"
    line-color="#ededed"
  >
    <wxc-tab-panel
      wx:for="{{tabs}}"
      wx:for-item="tab"
      wx:key="{{tab.itemId}}"
      tab-index="{{index}}"
      component-id="c2"
      label="{{tab.itemName}}"
    >
      <view class="filter t-FBH">
        <view class="filterItem t-FB1">
          <picker 
            bindchange="bindPickerChange" 
            value="{{index}}" 
            range="{{array}}"
            >
            <view class="picker">
              <text>{{array[selected]}}</text>
              <image src="../../images/arrow-down.png"></image>
            </view>
          </picker>
        </view>
        <view class="filterItem t-FB1">
          <picker 
            mode="date" 
            value="{{date}}" 
            fields="month" 
            start="2015-09"  
            bindchange="bindDateChange"
            >
            <view class="picker">
              <text>{{date?date: "全部"}}</text>
              <image src="../../images/arrow-down.png"></image>
            </view>
          </picker>
        </view>
      </view>
      <scroll-view 
        scroll-y 
        bindscrolltolower="lower" 
        scroll-top="{{scrollTop}}"
        class="{{operateRight ? 'scroll-view' : 'scroll-view no-bottom'}} "
        >
        <view class="scroll-view-head scroll-view-item t-FBH">
          <view class="t-FB1">昵称</view>
          <!-- <view class="t-FB1">收费项目</view> -->
          <view class="t-FB1">所属月份</view>
          <view class="t-FB1">应收金额</view>
          <view class="t-FB1">实收金额</view>
          <view class="t-FB1">开票状态</view>
          <view class="t-FB1">缴费状态</view>
        </view>
        <view 
          wx:for="{{list}}"  
          wx:for-index="index" 
          wx:for-item="item"
          wx:key="{{item.id}}"
          wx:if="{{list.length}}"
          >
          <picker 
            bindchange="bindhandleChange" 
            range="{{status}}" 
            wx:if="{{operateRight}}" 
            data-id="{{item.id}}" 
            data-amount="{{item.planPayFee}}"
            data-item="{{item}}"
            >
            <view class="scroll-view-item t-FBH">
              <view class="t-FB1">{{item.nickName}}</view>
              <!-- <view class="t-FB1">{{item.itemName}}</view> -->
              <view class="t-FB1">{{item.theMonth}}</view>
              <view class="t-FB1">{{item.planPayFee}}</view>
              <view class="t-FB1">{{item.realPayFee}}</view>
              <view class="t-FB1">{{item.ticketStatus ? "已开票" : "未开票"}}</view>
              <view class="t-FB1">{{item.payStatus ? "已缴费":"未缴费"}}</view>
            </view>
          </picker>
          <view class="scroll-view-item t-FBH" wx:else>
              <view class="t-FB1">{{item.nickName}}</view>
              <!-- <view class="t-FB1">{{item.itemName}}</view> -->
              <view class="t-FB1">{{item.theMonth}}</view>
              <view class="t-FB1">{{item.planPayFee}}</view>
              <view class="t-FB1">{{item.realPayFee}}</view>
              <view class="t-FB1">{{item.ticketStatus ? "已开票" : "未开票"}}</view>
              <view class="t-FB1">{{item.payStatus ? "已缴费":"未缴费"}}</view>
            </view>
        </view>
        <view class="no-data" wx:if="{{list.length == 0}}">
          暂时没有收费记录
        </view>
      </scroll-view>
      <button 
        class="btn-add t-FB1 " 
        type='default' 
        bindtap='onAddRecord' 
        wx:if="{{operateRight}}" 
        >
        新增记录
        </button>
    </wxc-tab-panel>
  </wxc-tab>
  <view wx:else class="no-data">
    暂时没有收费项目
  </view>
